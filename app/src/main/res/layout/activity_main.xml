<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xcodeblocks.lotto.MainActivity">

<!-- changed color from Design mode(tab) -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_bright"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

<!-- separating some part ~~ not necessary to do this, you can just simply include the content in content_main.xml -->
    <include layout="@layout/content_main" />

    <!--2nd line under 'Switch': set the initial switch state-->
    <Switch
        android:id="@+id/switch_frequentNumbers"
        android:checked="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="pick 'frequently picked number' in higher chance" />

    <Button
        android:id="@+id/button_generate"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="generate button" />

<!--TODO: make this button for the part below stick to bottom right -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</LinearLayout>


